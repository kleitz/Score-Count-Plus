<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartGame"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="quarter 1"
            android:textAllCaps="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="16sp"
            android:fontFamily="sans-serif-light"
            android:id="@+id/quarter_number"
            android:padding="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textSize="48sp"
            android:layout_below="@id/quarter_number"
            android:id="@+id/timer"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Home Team"
            android:id="@+id/home_team_view"
            android:fontFamily="sans-serif-light"
            android:layout_weight="6"
            android:textAllCaps="true"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="vs"
            android:fontFamily="sans-serif-light"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Away Team"
            android:id="@+id/away_team_view"
            android:fontFamily="sans-serif-light"
            android:layout_weight="6"
            android:textAllCaps="true"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="32dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="6">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="00"
                android:textSize="64sp"
                android:layout_marginBottom="16dp"
                android:id="@+id/homeScore"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="+ 3 Points"
                android:textAllCaps="true"
                android:onClick="threePointsHome"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="+ 2 Points"
                android:textAllCaps="true"
                android:onClick="twoPointsHome"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Free Throw"
                android:textAllCaps="true"
                android:onClick="onePointHome"/>
        </LinearLayout>

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/material_blue_grey_900"
            android:layout_margin="8dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="6">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="00"
                android:textSize="64sp"
                android:layout_marginBottom="16dp"
                android:id="@+id/awayScore"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="+ 3 Points"
                android:textAllCaps="true"
                android:onClick="threePointsAway"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="+ 2 Points"
                android:textAllCaps="true"
                android:onClick="twoPointsAway"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Free Throw"
                android:textAllCaps="true"
                android:onClick="onePointAway"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="P"
            android:fontFamily="sans-serif-light"
            android:onClick="pauseTimer"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="R"
            android:fontFamily="sans-serif-light"
            android:onClick="resetTimer"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="C"
            android:fontFamily="sans-serif-light"
            android:onClick="continueTimer"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="N"
            android:fontFamily="sans-serif-light"
            android:onClick="next"/>
    </LinearLayout>

</LinearLayout>